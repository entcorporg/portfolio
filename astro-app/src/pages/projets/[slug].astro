---
import ProjectLayout from "../../layouts/ProjectLayout.astro";
import { getAllSlugs } from "../../content/projects.config";
import { LibrairieIndependante } from "../../content/Librairie-Independante";
import { LeGlobule } from "../../content/Le-Globule";
import { StreetLife } from "../../content/Street-Life";

export function getStaticPaths() {
  return getAllSlugs().map((slug) => ({
    params: { slug },
  }));
}

const { slug } = Astro.params;
---

<ProjectLayout>
  {slug === "librairie-independante" && <LibrairieIndependante client:load />}
  {slug === "le-globule" && <LeGlobule client:load />}
  {slug === "street-life" && <StreetLife client:load />}
</ProjectLayout>
